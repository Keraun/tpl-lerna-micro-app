{
  "name": "root",
  "private": true,
  "type": "module",
  "workspaces": [
    "applications/*"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "build": "lerna run build && node ./bin/after-build.js",
    "test": "lerna run test",
    "commit": "git-cz",
    "addnewapp": "node ./bin/add-newapp.js",
    "dev:app-main": "pnpm --filter @memo-admin/app-main dev --port 3000",
    "dev:app-demo-1": "pnpm --filter @memo-admin/app-demo-1 dev --port 5000",
    "dev:app-demo-2": "pnpm --filter @memo-admin/app-demo-2 dev --port 5001",
    "dev:app-demo-3": "pnpm --filter @memo-admin/app-demo-3  dev  --host --port 5002",
    "dev:app-demo-4": "pnpm --filter @memo-admin/app-demo-4 dev  --host --port 5003"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@eslint/js": "^9.19.0",
    "commitizen": "^4.3.1",
    "commitlint": "^19.7.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.21.0",
    "fs-extra": "^11.3.0",
    "husky": "^9.1.7",
    "inquirer": "^12.4.2",
    "lerna": "^8.2.0",
    "lint-staged": "^15.4.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
