{
  "name": "root",
  "private": true,
  "workspaces": [
    "applications/*"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "build": "npm-run-all --parallel build:*",
    "dev:app-main": "pnpm --C applications/app-main dev",
    "build:app-main": "pnpm --C applications/app-main build",
    "dev:app-demo-1": "pnpm --C applications/app-demo-1 dev",
    "build:app-demo-1": "pnpm --C applications/app-demo-1 build",
    "dev:app-demo-2": "pnpm --C applications/app-demo-2 dev",
    "build:app-demo-2": "pnpm --C applications/app-demo-2 build"
  },
  "devDependencies": {
    "lerna": "^8.2.0",
    "npm-run-all": "^4.1.5"
  }
}
