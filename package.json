{
  "name": "root",
  "private": true,
  "type": "module",
  "workspaces": [
    "applications/*"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "build": "lerna run build && node ./bin/after-build.js",
    "test": "lerna run test",
    "dev:app-main": "cd ./applications/app-main && npm run dev -- --port 3000",
    "dev:app-demo-1": "cd ./applications/app-demo-1 && npm run dev -- --port 5001",
    "dev:app-demo-2": "cd ./applications/app-demo-2 && npm run dev -- --port 5002",
    "dev:app-demo-3": "cd ./applications/app-demo-3 && npm run dev -- --port 5003",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@eslint/js": "^9.19.0",
    "commitlint": "^19.7.1",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lerna": "^8.2.0",
    "lint-staged": "^15.4.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.1",
    "typescript-eslint": "^8.22.0"
  }
}
